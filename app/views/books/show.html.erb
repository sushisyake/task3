<div>
  <%= flash[:notice] %>
  </div>

    <div class="container">
  <div class="row">
      <%= render 'books/list', book: @book_new, user: @user %>
<div class="col-md-8 offset-md-1">
  <h1 class =  "my-3">Book detail</h1>
<table class="table table-hover table-inverse">
  <tbody>
    <tr>
      <td><%= link_to user_path(@user) do %>
            <%= image_tag @book.user.get_profile_image(100,100) %><br>
            <%= @book.user.name %>
          <% end %>
          </td>
          <%= @book.user.name %></td>

      <td><%= link_to book_path do %>
            <%= @book.title %></td>
          <% end %>
      <td><%= @book.body %></td>
      <td>
        <% if @book.user == current_user %>
          <%= link_to "Edit", edit_book_path(@book),class: "btn btn-success"%></td>
          <td>
          <button type="button" class="btn btn-danger">
          <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %></button>
          </td>
        <% end %>
    </tr>
  </tbody>
</table>
</div>