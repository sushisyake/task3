<div class="col-lg-5 px-5 mx-auto">
  <h2 class =  "my-3">User info</h2>


  <% if @user.errors.any? %>
    <%= @user.errors.count %>error prohibited this obj from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @user do |f| %>
    <label for="inputName">Name</label><br>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class:"mb-3"%><br>
    <label for="inputImage">Image</label><br>
    <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*", class:"mb-3" %> <br>
    <label for="inputIntro">Introduction</label><br>
    <%= f.text_field :introduction, autofocus: true, id:"inputIntro",  class:"mb-3"%><br>
    <button class="btn btn-secondary" type="submit">Update User</button>
  <% end %>
</div>